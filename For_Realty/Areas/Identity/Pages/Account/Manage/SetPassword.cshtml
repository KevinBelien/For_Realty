@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Wachtwoord instellen";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h2>Set your password</h2>
<partial name="_StatusMessage" for="StatusMessage" />
<p class="text-info">
    <!--You do not have a local username/password for this site. Add a local
    account so you can log in without an external login.-->
    U hebt nog geen lokaal account aangemaakt op deze site. Voeg een lokaal account aan om in te loggen met een extern account.
</p>
<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.NewPassword"></label>
                <input asp-for="Input.NewPassword" class="form-control" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Wachtwoord instellen</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
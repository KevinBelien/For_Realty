@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Verwijder Persoonlijke data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Bij het verwijderen van de data zal uw account permanent verwijderd worden. Dit kan niet ongedaan gemaakt worden!</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger" type="submit">Verwijder data en account</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
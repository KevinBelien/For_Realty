@model For_Realty.ViewModels.ListRealEstateViewModel

@{ ViewData["Title"] = "Home Page"; }

<h1 class="mt-5 mb-4 text-center">De plek voor aankoop van vastgoed</h1>
<div class="row my-4">
    <div class="col-md-12 d-flex justify-content-center">
        <partial name="_SearchbarPartial" model="Model" />
    </div>
</div>
<h2 class="mb-3 head-title-index text-sm-center text-md-left">Nieuw te koop!</h2>

<div class="row mt-5">
    @foreach (var estate in Model.RealEstatesBuy)
    {
        <div class="col-lg-4 col-md-6 col-12 mb-5">
            <div class="d-flex justify-content-center">
                <div class="card">
                    <a asp-controller="RealEstate" asp-action="Details" asp-route-id="@(estate.RealEstateID)" class="text-decoration-none detail-text card-link">
                        <div>
                            <img src="@(estate.RealEstatePictures.Where(re => re.Title == "Front").SingleOrDefault().FileName)"
                                 class="card-img-top card-img-index" alt="picture of estate witch code @(estate.Code)" />
                            <div class="card-img-overlay">
                                <div class="card-text text-right card-date">
                                    @if ((Math.Floor((Model.LocalDate - estate.DateInit).TotalDays).ToString()) != "0")
                                    {
                                        <span>@(Math.Floor((Model.LocalDate - estate.DateInit).TotalDays).ToString())d geleden toegevoegd</span>
                                    }
                                    else
                                    {
                                        <span>Vandaag toegevoegd</span>
                                    }
                                </div>

                            </div>
                        </div>
                        <div class="card-body text-left">
                            <div class="row mb-0 pt-0 mb-2">
                                <div class="col-12">
                                    <p class="card-title">@(estate.RealEstateSubtype.RealEstateType.Name)</p>
                                </div>

                            </div>
                            <div class="row mb-1">
                                <div class="col-6">
                                    <p class="card-text">@(estate.RealEstateStatus.Status)</p>
                                </div>
                                @if (estate.AmountBedrooms != null)
                                {
                                    <div class="col-6">
                                        <p class="card-text text-right">@(estate.AmountBedrooms.ToString())&nbsp;slpk</p>
                                    </div>
                                }
                            </div>
                            <div class="row mb-1">
                                <div class="col-6">
                                    <p class="card-text">@(estate.Town.Name) - @(estate.Town.ZIP) </p>
                                </div>
                                <div class="col-6">
                                    <p class="card-text text-right">@(estate.AreaSpace.ToString())&nbsp;m²</p>
                                </div>
                            </div>
                            <div class="row mb-1">
                                <div class="col-6">
                                    <p class="card-text">@(estate.Street)&nbsp;@(estate.HouseNr)</p>
                                </div>
                                <div class="col-6">
                                    <p class="card-text text-right text-price">&euro; @(estate.Price.ToString("N0"))&nbsp;</p>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    }
</div>

